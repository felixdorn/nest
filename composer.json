{
    "name": "felixdorn/nest",
    "description": "Nest is a simple pseudo-programming language for defining repeatable and non-repeatable events in time.",
    "license": "MIT",
    "authors": [
        {
            "name": "FÃ©lix Dorn",
            "email": "github@felixdorn.fr"
        }
    ],
    "require": {
        "php": "^8.0",
        "nesbot/carbon": "^2.52"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^v3.0.0",
        "pestphp/pest": "^v1.16.0",
        "phpstan/phpstan": "^0.12.88",
        "symfony/var-dumper": "^5.2.0"
    },
    "autoload": {
        "psr-4": {
            "Felix\\Nest\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Felix\\Nest\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist"
    },
    "scripts": {
        "lint": "php-cs-fixer fix -v",
        "test:lint": "php-cs-fixer fix -v --dry-run",
        "test:types": "phpstan analyse --ansi --memory-limit=-1",
        "test:unit": "pest --colors=always",
        "test": [
            "@test:lint",
            "@test:types",
            "@test:unit"
        ]
    }
}
